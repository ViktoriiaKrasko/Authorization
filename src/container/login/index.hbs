{{!
Це код container файлу для index сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/"
}}

<div class="page page--background">
    <header>{{> back-button}}</header>

    <form class="page__section">
        <h1 class="page__title">Log In</h1>
        <div class="form">
            <div class="form__item">
                {{> field action="signupForm.change" label="Email" type="email" name="email" placeholder="Enter email"}}
                <span name="email" class="form__error">Error</span>
            </div>
            <div class="form__item">
                {{> field-password action="signupForm.change" name="password" label="Password"
                placeholder="Enter password"}}
                <span name="password" class="form__error">Error</span>
            </div>
        </div>

        <button onclick="signupForm.submit()" class="button button--disabled" type="button">Log In</button>
        <span class="alert alert--disabled">Attention! Error!</span>
        <span class="link__prefix">Forgot password? <a href="/recovery" class="link">Recover</a></span>
    </form>

</div>

